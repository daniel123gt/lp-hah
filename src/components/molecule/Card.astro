---
const { title, description, imgSrc, imgAlt, href } = Astro.props;
import { Image } from 'astro:assets';

---

<article class="group w-[312px] h-full rounded-xl overflow-hidden shadow bg-white cursor-pointer">
  <figure class="w-full h-[208px] overflow-hidden">
    <Image src={imgSrc} alt={imgAlt} class="w-full h-full object-cover group-hover:scale-120 transition-all duration-500"/>
  </figure>
  <div class="py-4 px-6 flex flex-col gap-2">
    <h3 class="text-primary-blue text-xl font-semibold">{title}</h3>
    <p class="text-text-medium">
      {description}
    </p>
  </div>
</article>
