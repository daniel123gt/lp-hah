---
import { Image } from "astro:assets";
import Separator from "../atom/Separator.astro";
import WaveHero from "../atom/WaveHero.astro";

const { 
  imgSrc, 
  imgAlt, 
  title, 
  subTitle, 
  tagText = "Servicio Especializado",
  icon1 = "‚ö°",
  icon2 = "üõ°Ô∏è", 
  icon3 = "‚≠ê",
  text1 = "R√°pido",
  text2 = "Seguro",
  text3 = "Calidad"
} = Astro.props;
---

<section
  class="bg-gradient-to-br from-primary-blue via-primary-blue via-65% to-accent-blue to-95% relative"
>
  <!-- Formas geom√©tricas decorativas -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-10 right-10 w-32 h-32 bg-white/5 rounded-full blur-xl"></div>
    <div class="absolute bottom-20 left-10 w-24 h-24 bg-accent-blue/10 rounded-full blur-lg"></div>
    <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-white/3 rounded-full blur-md"></div>
  </div>

  <div class="relative z-10">
    <div
      class="relative flex flex-col-reverse lg:flex-row-reverse items-center justify-between gap-[20px] w-full h-[400px] lg:h-[600px] container mx-auto mb-20"
    >
      <!-- Imagen con marco moderno -->
      <div
        class="relative rounded-2xl w-[300px] lg:w-[400px] h-[300px] lg:h-[400px] overflow-hidden shadow-2xl"
      >
        <Image
          src={imgSrc}
          alt={imgAlt}
          class="object-cover w-full h-full transition-transform duration-500 hover:scale-110"
        />
        <!-- Marco decorativo -->
        <div class="absolute inset-0 border-4 border-white/20 rounded-2xl"></div>
        <div class="absolute -top-2 -right-2 w-6 h-6 bg-accent-blue rounded-full"></div>
        <div class="absolute -bottom-2 -left-2 w-4 h-4 bg-white/30 rounded-full"></div>
      </div>

      <!-- Contenido con dise√±o moderno -->
      <div
        class="text-white flex flex-col text-center lg:text-left space-y-6"
      >
        <!-- Etiqueta de categor√≠a -->
        <div class="flex justify-center lg:justify-start">
          <span class="inline-block px-4 py-2 bg-accent-blue/20 text-accent-blue text-sm font-semibold rounded-full border border-accent-blue/30">
            {tagText}
          </span>
        </div>

        <h1 class="text-3xl lg:text-7xl text-wrap font-bold leading-tight">
          {title}
        </h1>
        
        <p class="text-xl lg:text-4xl opacity-90 leading-relaxed">
          {subTitle}
        </p>
        
        <div class="flex justify-center lg:justify-start">
          <Separator />
        </div>

        <!-- Caracter√≠sticas destacadas -->
        <div class="grid grid-cols-3 gap-2 max-w-sm mx-auto lg:mx-0">
          <div class="text-center lg:text-left">
            <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center mx-auto lg:mx-0 mb-2">
              <span class="text-xl">{icon1}</span>
            </div>
            <div class="text-xs opacity-80">{text1}</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center mx-auto lg:mx-0 mb-2">
              <span class="text-xl">{icon2}</span>
            </div>
            <div class="text-xs opacity-80">{text2}</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center mx-auto lg:mx-0 mb-2">
              <span class="text-xl">{icon3}</span>
            </div>
            <div class="text-xs opacity-80">{text3}</div>
          </div>
        </div>
      </div>
    </div>
    <WaveHero />
  </div>
</section>
