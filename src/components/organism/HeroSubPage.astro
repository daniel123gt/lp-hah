---
import { Image } from "astro:assets";
import Separator from "../atom/Separator.astro";
import WaveHero from "../atom/WaveHero.astro";

const { imgSrc, imgAlt, title, subTitle } = Astro.props;
---

<section
  class="bg-linear-125 from-primary-blue via-primary-blue via-52% to-accent-blue to-52%"
>
  <div class="relative">
    <div
      class="relative flex flex-col-reverse lg:flex-row-reverse items-center justify-between gap-[20px] w-full h-[400px] lg:h-[600px] container mx-auto mb-20"
    >
      <div
        class="rounded-3xl w-[300px] lg:w-[400px] h-[300px] lg:h-[400px] border-primary-blue after:w-[300px] lg:after:w-[400px] after:h-[300px] lg:after:h-[400px] after:bg-primary-blue after:absolute after:bottom-0 after:-z-0 after:-right-5 after:top-15 after:rounded-3xl before:w-[300px] lg:before:w-[400px] before:h-[300px] lg:before:h-[400px] before:bg-accent-blue before:absolute before:-z-10 before:rounded-3xl before:-right-10 lg:after:bg-primary-blue lg:before:bg-accent-blue after:hidden lg:after:block before:hidden lg:before:block"
      >
        <Image
          src={imgSrc}
          alt={imgAlt}
          class="object-cover w-[300px] lg:w-[400px] h-[300px] lg:h-[400px] top-20 absolute rounded-3xl z-10"
        />
      </div>
      <div
        class="text-white flex flex-col text-center lg:text-left text-shadow-lg text-shadow-white/5"
      >
        <h1 class="text-3xl lg:text-7xl text-wrap">{title}</h1>
        <p class="text-xl lg:text-4xl">{subTitle}</p>
        <div class="flex justify-center lg:justify-start">
          <Separator />
        </div>
      </div>
    </div>
    <WaveHero />
  </div>
</section>
