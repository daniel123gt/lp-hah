<script>
  // Funci칩n para inicializar los contadores
  function initCounters() {
    const counters = document.querySelectorAll('.counter');
    
    // Limpiar contadores anteriores
    counters.forEach(counter => {
      if (counter instanceof HTMLElement) {
        counter.textContent = '0';
        counter.classList.remove('animated');
      }
    });
    
    const animateCounter = (counter: HTMLElement) => {
      if (counter.classList.contains('animated')) return;
      
      const target = parseInt(counter.getAttribute('data-target') || '0');
      const duration = 2000; // 2 segundos
      const step = target / (duration / 16); // 60fps
      let current = 0;
      
      counter.classList.add('animated');
      
      const timer = setInterval(() => {
        current += step;
        if (current >= target) {
          current = target;
          clearInterval(timer);
        }
        counter.textContent = Math.floor(current).toString();
      }, 16);
    };
    
    // Intersection Observer para animar cuando sea visible
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const counter = entry.target as HTMLElement;
          animateCounter(counter);
          observer.unobserve(counter);
        }
      });
    }, {
      threshold: 0.3,
      rootMargin: '0px 0px -50px 0px'
    });
    
    counters.forEach(counter => {
      if (counter instanceof HTMLElement) {
        observer.observe(counter);
      }
    });
    
    return observer;
  }
  
  // Inicializar en la carga inicial
  let observer: IntersectionObserver | null = null;
  
  document.addEventListener('DOMContentLoaded', () => {
    observer = initCounters();
  });
  
  // Reinicializar en cada navegaci칩n SPA
  document.addEventListener('astro:page-load', () => {
    // Limpiar observer anterior
    if (observer) {
      observer.disconnect();
    }
    // Peque침o delay para asegurar que el DOM est칠 listo
    setTimeout(() => {
      observer = initCounters();
    }, 100);
  });
  
  // Limpiar antes de la navegaci칩n
  document.addEventListener('astro:before-preparation', () => {
    if (observer) {
      observer.disconnect();
      observer = null;
    }
  });
</script>
