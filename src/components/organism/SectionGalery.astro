---
import Separator from "../../components/atom/Separator.astro";
import { Image } from 'astro:assets';
import { GALERY_SECTION } from "../../consts";
---

<section class="bg-white pb-24">
  <div class="container mx-auto flex flex-col items-center justify-center">
    <div class="flex flex-col items-center justify-center py-12">
      <h2 class="text-4xl font-semibold text-primary-blue">Nuestra Galer√≠a</h2>
      <Separator />
    </div>
    <ul class="grid gap-8 grid-cols-3">
      {
        GALERY_SECTION.map((image) => {
          return <Image src={image.imgSrc} alt={image.imgAlt} />;
        })
      }
    </ul>
  </div>
</section>
