---
import Card from "../molecule/Card.astro";
import Separator from "../../components/atom/Separator.astro";
import { SERVICES } from "../../consts/index";
---

<section
  class="bg-bg-light pb-24"
>
  <div class="container mx-auto flex flex-col items-center justify-center ">
    <div class="flex flex-col items-center justify-center py-12">
      <h2 class="text-4xl font-semibold text-primary-blue">
        Nuestros Servicios a Domicilio
      </h2>
      <Separator />
    </div>
    <ul class="grid gap-8 grid-cols-3">
      {
        SERVICES.map((service) => {
          return (
            <li class="h-full">
              <Card
                title={service.title}
                description={service.description}
                imgSrc={service.img.src}
                imgAlt={service.img.alt}
                href={service.href}
              />
            </li>
          );
        })
      }
    </ul>
  </div>
</section>
